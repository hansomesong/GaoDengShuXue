\newcommand{\my@sectionentry@show}[5]{%
  \ifnum\c@section=#1%
    \setbeamertemplate{navigation box}[current]%
  \else
    \setbeamertemplate{navigation box}[other]%
  \fi
  \begingroup
    \def\my@navibox{#1}%
    \hyperlink{Navigation#3}{\usebeamertemplate{navigation box}}%
  \endgroup
}

